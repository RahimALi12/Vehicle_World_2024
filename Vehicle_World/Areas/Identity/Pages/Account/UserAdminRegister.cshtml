@page "{role}"
@model Vehicle_World.Areas.Identity.Pages.Account.UserAdminRegisterModel
@{
    ViewData["Title"] = "User Admin Register";
    Layout = "_AdminLayout";
}

<style>
  /*   body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
