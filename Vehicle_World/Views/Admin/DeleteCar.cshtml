@model Vehicle_World.Models.CarDetail


@{
    Layout = "_AdminLayout";
}


@{
    ViewData["Title"] = "DeleteCar";
}




<style>

    body .card {
transition: background-color 1s ease, color 1s ease;
    }

 body .card-title {
transition: background-color 1s ease, color 1s ease;
    }
  
    body.dark-mode .card {
          background-color: #222126;
        color: #e0e0e0;
transition: background-color 1s ease, color 1s ease;
    }

 body.dark-mode .card-title {
        color: #e0e0e0;
transition: background-color 1s ease, color 1s ease;
    }

body.dark-mode .btn-secondary {
        color: #e0e0e0;
    }


</style>





<div class="content-wrapper">
  <section class="content">
<div class="container" style="margin-top: 80px;">
    <!-- Main heading -->
    <h3 class="text-danger text-center mb-4" style="font-size: 2rem; font-weight: 600;">Are you sure you want to delete this car?</h3>

    <!-- Car detail card with professional styling -->
    <div class="card shadow-lg mb-5" style="max-width: 900px; margin: 0 auto; border-radius: 3px;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <!-- Display the car image -->
                <img src="@Url.Content("~/images/" + Model.Image)" class="card-img" alt="Car Image" style="width: 100%; height: auto; border-radius: 10px 0 0 10px;" />
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <!-- Display car details -->
                    <h5 class="card-title" style="font-size: 1.5rem; font-weight: 700;">@Model.MakeType.Name @Model.ModelType.Name (@Model.Year)</h5>
                    <p class="card-text">
                        <strong>Body Type:</strong> @Model.BodyType.Name <br />
                        <strong>Engine Type:</strong> @Model.EngineType.Name <br />
                        <strong>Fuel Type:</strong> @Model.FuelType.Name <br />
                        <strong>Transmission Type:</strong> @Model.TransmissionType.Name <br />
                            
                                <strong>Color:</strong><div style="width: 50px; height: 50px; background-color: @Model.Color; border: none;"></div> <br />
                        <strong>Mileage:</strong> @Model.Mileage km <br />
                        <strong>Seating Capacity:</strong> @Model.SeatingCapacity <br />
                        <strong>Price:</strong> $@Model.Price <br />
                        <strong>Condition:</strong> @Model.ConditionType.Name <br />
                    </p>

                    <!-- More Features Section -->
                    <p class="card-text">
                        <strong>Features:</strong> 
                        @if (Model.BlindspotMonitor) { <span>Blindspot Monitor, </span> }
                        @if (Model.Adaptivecruisecontrol) { <span>Adaptive Cruise Control, </span> }
                        @if (Model.BackupCamera) { <span>Backup Camera, </span> }
                        @if (Model.ForwardCollisionwarning) { <span>Forward Collision Warning, </span> }
                        @if (Model.Heatedseats) { <span>Heated Seats, </span> }
                        @if (Model.Hillassist) { <span>Hill Assist, </span> }
                        @if (Model.Sunroof) { <span>Sunroof, </span> }
                        @if (Model.AutoPark) { <span>Auto Park, </span> }
                        @if (Model.Automaticemergencybraking) { <span>Automatic Emergency Braking, </span> }
                        @if (Model.EvasiveSteering) { <span>Evasive Steering, </span> }
                        @if (Model.Leatherseats) { <span>Leather Seats, </span> }
                        @if (Model.Remotestart) { <span>Remote Start, </span> }
                        @if (Model.USBoutlets) { <span>USB outlets, </span> }
                        @if (Model.Drivercommunicationassistance) { <span>Driver Communication Assistance, </span> }
                        @if (Model.AirConditioning) { <span>Air Conditioning, </span> }
                        @if (Model.Battery) { <span>Battery, </span> }
                        @if (Model.Bluetooth) { <span>Bluetooth, </span> }
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete confirmation form -->
    <form asp-action="DeleteCar" asp-controller="Admin" method="post" style="text-align: center;">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <!-- Cancel button with gradient and professional styling -->
            <a asp-action="AllCars" asp-controller="Admin" class="btn btn-secondary" 
               style="padding: 10px 20px; font-size: 1.1rem; border-radius: 1px; background: linear-gradient(180deg, rgba(105,105,105,1) 0%, rgba(134,134,134,1) 2%, rgba(177,177,177,1) 48%, rgba(112,112,112,1) 52%, rgba(82,82,82,1) 54%, rgba(105,105,105,1) 61%);">
                Cancel
            </a>
            <!-- Delete button with gradient and professional styling -->
            <input type="submit" value="Delete" class="btn btn-danger" 
                   style="padding: 10px 20px; font-size: 1.1rem; border-radius: 1px; background: linear-gradient(180deg, rgba(152,0,0,1) 0%, rgba(194,53,53,1) 2%, rgba(255,74,74,1) 48%, rgba(227,42,42,1) 52%, rgba(200,6,32,1) 54%, rgba(209,6,6,1) 61%);">
        </div>
    </form>
</div>
 </section>
</div>