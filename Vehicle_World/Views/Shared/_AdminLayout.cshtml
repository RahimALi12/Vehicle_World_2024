                                            <p>All Sellers</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                <a asp-area="Identity" asp-page="/Account/UserAdminRegister" asp-route-role="Seller" class="nav-link">
                                            <i class="fas fa-user-plus nav-icon"></i>
                                            <p>Add Seller</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fas fa-user-tag"></i>
                            <p>
                                Buyers
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a asp-action="BuyerIndex" asp-controller="Admin" class="nav-link">
                                    <i class="fas fa-users nav-icon"></i>
                                    <p>All Buyers</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="Identity" asp-page="/Account/UserAdminRegister" asp-route-role="Buyer" class="nav-link">
                                    <i class="fas fa-plus-square nav-icon"></i>
                                    <p>Add Buyer</p>
                                </a>
                            </li>
                        </ul>
                    </li>
   <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fas fa-car"></i>
                            <p>
                                Featured
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a asp-action="AllFeaturedCars" asp-controller="Admin" class="nav-link">
                                    <i class="fas fa-users nav-icon"></i>
                                    <p>All Featured Cars</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-action="ReviewFeaturedCars" asp-controller="Admin" class="nav-link">
                                    <i class="fas fa-plus-square nav-icon"></i>
                                    <p>Feature Request</p>
                                </a>
                            </li>
                        </ul>
                    </li>


                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fas fa-car"></i>
                            <p>
                                Bidding
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a asp-action="AllBiddingCars" asp-controller="Admin" class="nav-link">
                                    <i class="fas fa-users nav-icon"></i>
                                    <p>All Bidding Cars</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-action="ReviewBidCars" asp-controller="Admin" class="nav-link">
                                    <i class="fas fa-plus-square nav-icon"></i>
                                    <p>Bidding Request</p>
                                </a>
                            </li>
                        </ul>
                    </li>


                            <li class="nav-item">
                                <a asp-action="ContactMessages" asp-controller="Admin" class="nav-link">
                                    <i class="nav-icon far fa-comment"></i>
                                    <p>
                                        Messages
                                    </p>
                                </a>         
                            </li>
                            <li class="nav-item">
                                <a asp-action="AllCars" asp-controller="Admin" class="nav-link">
                                    <i class="nav-icon fas fa-car"></i>
                                    <p>
                                        All Cars
                                    </p>
                                </a>         
                            </li>
                         
                     
                        
                            
                           
                           
                                
                                 
                                </ul>
                    </nav>

                </div>

            </aside>


    <div>
        @RenderBody()
